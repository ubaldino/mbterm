@import 'nib'
@import 'nib/vendor'
@import 'jeet'


$color1 = #DC011E
$color2 = #11ADB9
$color3 = #009865
$color4 = #F9CE47
$color5 = #FB4D24
$color6 = #EB012C
$color7 = #0067C3
$color8 = #01BE46
$color9 = #F3B802
$color10 = #F12F02

 
#controller
    width:150px;
    height:150px;
    font-size:150px;//font-size is used to determine the size of arrows

.joydiv-controller
    position absolute
    bottom 10%
    left 8%
    .joydiv-up ,.joydiv-left, .joydiv-right, .joydiv-down
        position absolute
        width 0
        height 0
        background  transparent
        border solid transparent

    .joydiv-up
        top -10%
        left 50%
        margin-left -25%
        border-bottom-color $color10
        border-top-width 0
        border-left-width .25em
        border-right-width .25em
        border-bottom-width .30em

    .joydiv-left
        left  -10%
        top  50%
        border-right-color  $color9
        border-top-width  .25em
        border-left-width  0
        border-right-width  .30em
        border-bottom-width  .25em
        margin-top -25%

    .joydiv-right
        right -10%
        top 50%
        margin-top -25%
        border-left-color  $color9
        border-top-width  .25em
        border-left-width  .30em
        border-right-width  0
        border-bottom-width  .25em

    .joydiv-down
        bottom -10%
        left 50%
        margin-left -25%
        border-top-color  $color10
        border-top-width  .30em
        border-left-width  .25em
        border-right-width  .25em
        border-bottom-width  0

    .joydiv-trackpad
        position absolute
        left 30%
        right 30%
        top 30%
        bottom 30%
        background $color8
        border-radius 5%

        .joydiv-tracker
            position absolute
            top 50%
            left 50%
            border-radius 50%
            border-style solid
            border-width .1em
            margin-left -.1em
            margin-top -.1em
            border-color $color7





.fadein
    opacity 1
    -webkit-transition opacity 1s ease-in

.fadeout
    opacity 0
    -webkit-transition opacity 1s ease-out

textarea
    font 16px "Source Sans", helvetica, arial, sans-serif
    font-weight 200
    display block
    -webkit-border-radius 6px
    width 100%
    height 140px


#connection
    margin-bottom 40px
    text-align center

#chat
    display none
    margin 20px

#sendButton
    margin-top 4px

#message
    max-width 185px

select
    min-width 200px

form
    margin-bottom 20px

footer
    margin 20px

